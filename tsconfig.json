{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["app/frontend/*"]
      }
    },
    "include": ["app/frontend/**/*.ts", "app/frontend/**/*.vue"],
    "exclude": ["node_modules"]
  }